{
    "manifest_version": 2,

    "name": "NITC Authenticator",
    "short_name": "NITC-Auth",
    "description": "This extension lets you authenticate your connection with username and password. Built for use in NIT Calicut.",
    "version": "0.1",

    "permissions": [
        "tabs",
        "activeTab",
        // "notifications",
        // "background",
        "storage"
    ],
    "content_scripts": [{
        "js": ["jquery.js", "authenticate.js"],
        "matches": ["<all_urls>"]
    }],

    // "web_accessible_resources": ["main.js", "authenticate.js", "jquery.js"],
    
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "browser_action": {
        "default_icon": "icon48.png",
        "default_title": "NITC Authenticator",
        "default_popup": "authenticate.html"
    }

}